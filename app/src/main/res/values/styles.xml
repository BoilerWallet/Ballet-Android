<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="TextinputLayout.HintText" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/light_text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextinputLayout.Main" parent="AppTheme">
        <item name="colorAccent">@color/light_text_primary</item>
        <item name="android:textColorHint">@color/light_text_disabled</item>
    </style>

    <style name="DefaultRaisedButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorAccentDark</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>
</resources>
